<section class="signup-section">
    <div class="signup-container">
        <h2 class="signup-container__title">Sign up to log in</h2>
        <form class="signup-container__form">
            <label class="form-field">
                <input class="form-input login-input" type="text" placeholder=" ">
                <span class="form-label">Login</span>
                <span class="material-icons form-icon-valid">check_circle</span>
                <span class="material-icons form-icon-invalid">report</span>
            </label>
            <label class="form-field">
                <input class="form-input password-input" type="password" placeholder=" ">
                <span class="form-label">Password</span>
                <span class="material-icons form-icon-valid">check_circle</span>
                <span class="material-icons form-icon-invalid">report</span>
            </label>

            <button class="submit-button" type="submit">Login</button>
        </form>
        <div class="signup-container__footer">
            <p class="signup-container__title footer">Don't have login yet?</p>
            <a class="signup-container__link" href="./register.html">Register</a>
        </div>

    </div>
</section>